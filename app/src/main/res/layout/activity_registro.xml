<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".RegistroActivity">

    <Button
        android:id="@+id/btRRegistrarU"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="registrarUsuario"
        android:text="@string/confirmar_registro_de_usuario"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@color/fondo"
        app:cornerRadius="20dip"
        app:layout_constraintEnd_toEndOf="@+id/edtRConfirmarContraseña"
        app:layout_constraintStart_toStartOf="@+id/edtRConfirmarContraseña"
        app:layout_constraintTop_toBottomOf="@+id/edtRConfirmarContraseña" />

    <EditText
        android:id="@+id/edtRE"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:background="@drawable/style_edt"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edtRNombre"
        app:layout_constraintStart_toStartOf="@+id/edtRNombre"
        app:layout_constraintTop_toBottomOf="@+id/edtRNombre" />

    <EditText
        android:id="@+id/edtRContraseña"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:background="@drawable/style_edt"
        android:ems="10"
        android:hint="@string/contraseña"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edtRE"
        app:layout_constraintStart_toStartOf="@+id/edtRE"
        app:layout_constraintTop_toBottomOf="@+id/edtRE" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/registro"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtRConfirmarContraseña"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:background="@drawable/style_edt"
        android:ems="10"
        android:hint="@string/confirmar_contraseña"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edtRContraseña"
        app:layout_constraintStart_toStartOf="@+id/edtRContraseña"
        app:layout_constraintTop_toBottomOf="@+id/edtRContraseña" />

    <EditText
        android:id="@+id/edtRNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:autofillHints=""
        android:background="@drawable/style_edt"
        android:ems="10"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>