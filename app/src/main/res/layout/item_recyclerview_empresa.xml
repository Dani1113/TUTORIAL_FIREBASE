<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margen1" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_empresa"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:contentDescription="@string/img_empresa"
            android:src="@drawable/empresa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/padding1">

            <TextView
                android:id="@+id/txt_rv_nombre_empresa"
                android:layout_width="@dimen/ancho1_item_reciclerview"
                android:layout_height="wrap_content"
                android:text="@string/cod_empresa"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/txt_rv_sector_empresa"
                android:layout_width="@dimen/ancho1_item_reciclerview"
                android:layout_height="wrap_content"
                android:text="@string/clave_empresa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_rv_resumen_empresa"
                android:layout_width="@dimen/ancho1_item_reciclerview"
                android:layout_height="wrap_content"
                android:text="@string/datos_empresa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_rv_direccion_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/direccion_empresa"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>